
{
	skip_install_trust

    auto_https off {
        disable_redirects
    }

	{$FP_GLOBAL_OPTIONS}

	frankenphp {
		php_ini {
			disable_functions exec,passthru,shell_exec,system,proc_open,popen,show_source
			memory_limit 1G
			max_execution_time 300
			max_input_time 300
		}
		{$FP_FRANKENPHP_OPTIONS}
	}
}

{$FP_EXTRA_CONFIG}

{$FP_SERVER_NAME} {
	encode zstd br gzip
    log {
        level WARN
    }

	{$FP_SERVER_OPTIONS}

    root /app/web
	php_server
}

